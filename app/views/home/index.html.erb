<!-- Start exibition Area -->
<section class="exibition-area section-gap" id="exhibitions">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-20 col-lg-10">
				<div class="title text-center">
					<h1 class="mb-10">Checkout our Events</h1>
					<p>Lets Play Gutka</p>
				</div>
			</div>
		</div>						
		<div class="row">
			<div class="active-exibition-carusel owl-carousel">
				<% @events.each do |event| %>
					<div class="single-exibition item">
						<%= Event.getYoutubeIframe(event.video_url) %>
						<a href="#"><h4><%= event.title %></h4></a>
						<p>
							<%= truncate(event.description, :length => 90) %>
						</p>
						<%= link_to 'View Details', event_path(event), class: 'primary-btn text-uppercase' %>
						<h6 class="date mt-15"><%= event.datetime.strftime("%d %b %Y") %></h6>
					</div>
				<% end %>
			</div>													
		</div>
	</div>	
</section>
<!-- End exibition Area -->

