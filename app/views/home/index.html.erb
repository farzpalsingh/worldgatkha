<!-- Start blog Area -->
<section class="blog-area section-gap" id="blog">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-20 col-lg-8">
				<div class="title text-center">
					<h1 class="mb-10">Latest News</h1>
					<p>Lets Play Gatka</p>
				</div>
			</div>
		</div>					
		<div class="row">
			<div class="single-blogNW owl-carousel">
				<% @news.each do |news| %>
					<% if news.is_active? %>
						<div class="single-blog item">
							<div class="thumb">
								<% if news.attachments.exists? %>
									<div class="thumb_img" style="background-image: url(<%= news.attachments.first.attachment.url %>)">
									</div>
								<% else %>
									<div class="thumb_img" style="background-image: url('/assets/placeholder.gif')">
									</div>
								<% end %>
															
							</div>
							<p class="date"><%= news.datetime.strftime("%d %b %Y") %></p>
							<a href="#"><h4><%= news.title %></h4></a>
							<p>
								<%= truncate(news.description, :length => 60) %>
							</p>
							<%= link_to 'View Details', news_path(news), class: 'primary-btn text-uppercase' %>						
						</div>
					<% end %>
				<% end %>
			</div>						
		</div>
	</div>	
</section>
<!-- End blog Area -->

