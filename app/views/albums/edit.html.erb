<div class="container-fluid">
	<!-- Breadcrumbs-->
	<ol class="breadcrumb">
	    <li class="breadcrumb-item">
	    	<%= link_to "Dashboard", admin_index_path %>
	    </li>
	    <li class="breadcrumb-item">Albums</li>
	    <li class="breadcrumb-item active">Edit Album</li>
	</ol>

	<!-- Page Content -->
	<h3>Add Album</h3>
	<hr>
	<div class="addNewsForm">
		<%= form_for :album, :url => admin_gallery_album_path, method: :PATCH, local: true, :html => { :multipart => true } do |f| %>
            <div class="form-group">
              	<div class="form-label-group-new">
	              	<%= f.label :title %>
	                <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control', placeholder: "Enter Album Title" %>
              	</div>
            </div>
            <div class="form-group">
          		<div class="form-label-group-new">
				    <%= f.label :attachment, 'Upload Image' %><br>
				    <%= f.file_field :attachment, multiple: true %>
				</div>
			</div>

			<div class="mt-3 mb-3">
	        	<div class="row">
		        	<% @album.attachments.each do |attachment| %>
		        		<div class="col-md-2">
		        			<div class="albumImage" style="background: url(<%= attachment.attachment.url %>) no-repeat center center / cover;">
		        			</div>
		        			<%#= image_tag(attachment.attachment.url, class: 'media-object', style: 'width: 100%') %>
			        	</div>
			        <% end %>
			    </div>
	        </div>
            
            <%#= f.fields_for :attachments do |ff| %>
				<!-- <div class="form-group">
              		<div class="form-label-group-new">
					    <%#= ff.label :attachment, 'Upload Image' %><br>
					    <%#= ff.file_field :attachment %>
					</div>
				</div> -->
			<%# end %>

            <div class="actions">
              <%= f.submit "Save Album", :class => 'btn btn-primary btn-block adminActionBtn' %>
            </div>
        <% end %>
	</div>
</div>
<!-- /.container-fluid -->