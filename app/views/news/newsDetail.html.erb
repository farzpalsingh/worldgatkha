<!-- start banner Area -->
<section class="banner-area relative" id="home">	
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<h1 class="text-white">
					News Detail				
				</h1>	
				<p class="text-white link-nav"><%= link_to 'Home', home_path %>  <span class="lnr lnr-arrow-right"></span>  <%= link_to 'News Detail', 'javascript:;' %></p>
			</div>											
		</div>
	</div>
</section>
<!-- End banner Area -->	

<!-- Start blog-posts Area -->
<section class="blog-posts-area section-gap">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 post-list blog-post-list">
				<div class="single-post">
					<% if @news.attachments.exists? %>
						<%= image_tag(@news.attachments.first.attachment.url, class: 'img-fluid', style: 'width: 100%') %>
					<% else %>
						<img src="/assets/placeholder.gif" alt="" class="img-fluid">
					<% end %>
					<p class="date"><%= @news.datetime.strftime("%d %b %Y") %></p>
					<h1>
						<%= @news.title %>
					</h1>
					<p>
						<%= @news.description %>
					</p>
				</div>																				
			</div>
		</div>
	</div>	
</section>
<!-- End blog-posts Area -->